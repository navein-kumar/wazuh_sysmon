<group name="linux,sysmon,">
    <rule id="200150" level="2">
        <decoded_as>sysmon-linux</decoded_as>
        <field name="system.eventId">\.+</field>
        <description>Sysmon For Linux Event</description>
        <mitre>
         <id>T1204</id>
        </mitre>
        <options>no_full_log</options>
    </rule>
